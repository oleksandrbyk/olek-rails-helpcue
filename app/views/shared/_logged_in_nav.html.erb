<li class="logo">
  <%= link_to root_path, class: "nav-links", title: 'Home' do %>
    <span class="nav-icon nav-logo"></span>
    <span class="nav-wordmark"></span>
  <% end %>
</li>
<li>
  <%= link_to_selected root_path, class: "nav-links" do %>
    <span class="nav-icon nav-classrooms"></span>
    <span class="nav-label">Classrooms</span>
  <% end %>
</li>

<% if @classroom.try(:id) %>
  <% requests = @classroom.requests.need_help.count %>
  <li id="queue_link" data-classroomid="<%= @classroom.id %>" data-reqlimit="30" data-requests="<%= requests %>">
     <%= link_to_selected classroom_requests_path(@classroom), class: "nav-links" do %>
       <span class="nav-icon nav-queue">
         <% if requests > 0 %>
           <span class="req-num requests-badge">
             <%= requests > 30 ? '30+' : requests %>
           </span>
          <% else %>
            <span class="req-num requests-badge dont-show"></span>
         <% end %>

       </span>
       <span class="nav-label">Queue</span>
     <% end %>
  </li>

  <li id="track_link" data-classroomid="<%= @classroom.id %>" >
   <%= link_to_selected completed_classroom_requests_path(@classroom), class: "nav-links" do %>
     <span class="nav-icon nav-queue-completed"></span>
     <span class="nav-label">Completed</span>
   <% end %>
  </li>

  <% if policy(@classroom).edit? %>
    <li id="track_link" data-classroomid="<%= @classroom.id %>" >
     <%= link_to_selected edit_classroom_path(@classroom), class: "nav-links" do %>
       <span class="nav-icon nav-settings">
         <% if @classroom.classroom_users.students.empty? %>
           <span class="req-num requests-badge">!</span>
         <% end %>
       </span>
       <span class="nav-label">Settings</span>
     <% end %>
    </li>
  <% end %>

<% end %>

<div class="bottom-nav">
  <li>
    <%= link_to_selected '', class: 'nav-links subnav-toggle' do %>
      <span class="nav-icon nav-account"><span class="nav-gravatar" style="background: url('<%= current_user.avatar%>?s=68&d=blank'); background-size: contain;" title="<%= current_user.first_name %> <%= current_user.last_name %>"></span></span>
      <span class="nav-label subnav-slide">Account</span>
    <% end %>
  </li>
  </li>
  <li class="expand-collapse show-desktop">
    <a href='' class="nav-links collapse-toggle" title="Toggle Menu Size">
      <span class="nav-icon nav-size"></span>
      <span class="nav-label nav-label-hide">Collapse</span>
    </a>
  </li>
</div>