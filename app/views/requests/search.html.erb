  <div class="grid-unit whole">
    <h2>Results for "<%= params[:query] %>"</h2>
    <h6 class="subtitle"><%= @classroom.name %></h6>
  </div>
</div>
<div class="wrapper requests-container">

  <div class="grid-unit narrow pr" id="pagination">
    <%= render 'requests_pagination' %>
  </div>

  <div class="grid-unit wide helpcue requests">
    <%= search_count @total_results_count %>
    <div class="padding-border request <%= 'dont-show' if !@requests.empty? %>" id="placeholder">
      <div class="question-content">
        <p class="placeholder">There is no match for <em>'<%= params[:query] %>'</em>.</p>
      </div>
    </div>
    <div id="requests">
      <% @requests.each do |request| %>
        <%= render partial: 'request', locals: { classroom: @classroom, request: request.decorate } %>
        <%= render partial: 'request_more', locals: { classroom: @classroom, request: request } %>
      <% end %>
    </div>
  </div>
</div>