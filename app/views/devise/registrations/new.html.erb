<div class="grid-unit-header">
  <h3>Register</h3>
</div>
<%= form_for(resource, as: resource_name, html: {class: "form-input-required"}, url: registration_path(resource_name)) do |f| %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, class: "form-input " %>
  </div>
  <div class="form-group">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, class: "form-input" %>
  </div>
  <div class="form-group">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, class: "form-input" %>
  </div>
  <div class="form-group">
    <%= f.label :password %></label>
    <%= f.password_field :password, autocomplete: "off", class: "form-input" %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation %></label>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-input" %>
  </div>
  <%= f.submit "Register", class: "btn btn-primary"%>
<% end %>
<div class="grid-unit-footer">
  <p class="register"><%= link_to 'Already have an account? Login here', new_session_path(resource_name) %></p>
  <%- if devise_mapping.omniauthable? %>
    <p class="register">
    <%= link_to "Sign in with Google", omniauth_authorize_path(resource_name, :google_oauth2), class: 'googleplus-login' %>
    </p>
  <% end -%>
</div>
