<h6 class="subtitle classroom-option">Join Existing Classroom</h6>
<%= form_tag join_classrooms_path, method: :post, remote: true, id: 'join_classroom' do %>
  <div class="form-group form-input-required">
    <%= label_tag :join_token, 'Classroom Access Code' %>
    <%= text_field_tag :join_token, nil,placeholder: "Enter access code", class: "form-input" %>
  </div>
  <div>
    <%= submit_tag 'Join Classroom', class: "btn btn-primary" %>
  </div>
<% end %>